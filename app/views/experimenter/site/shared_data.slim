      tbody
        - @participants_with_currently_shared_data.each do |p|
          - p.virtual_direction_tests.find(:all, :conditions => "style = 'offsite'").each_with_index do |vdt, vdt_index|
            - vdt.virtual_direction_estimates.each do |vde|
              tr
                td = link_to p.study.name, experimenter_study_path(p.study)
                td = p.created_at
                td = vdt_index
                td = vde.start_landmark.name
                td = vde.facing_landmark.name
                td = vde.target_landmark.name
                td = vde.bearing
                td = vde.true_direction
                td = vde.abs_error
                td = vde.start_landmark.same_or_different_route(vde.target_landmark)

