              td = sbsod.q7
              td = sbsod.q8
              td = sbsod.q9
              td = sbsod.q10
              td = sbsod.q11
              td = sbsod.q12
              td = sbsod.q13
              td = sbsod.q14
              td = sbsod.q15

  - elsif @table == 'mrt'
