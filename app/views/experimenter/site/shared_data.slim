              td = mrt.q15
              td = mrt.q16
              td = mrt.q17
              td = mrt.q18
              td = mrt.q19
              td = mrt.q20



  - elsif @table == 'pvas'
    table.table.table-bordered.table-striped.data-table
      thead
        tr
          th study
          th date
          th total score
          th average score
          th q1 (should be reverse coded)
          th q2 (should be reverse coded)
